<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#f2a15a" />
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />
            <corners android:topLeftRadius="15dp" android:bottomLeftRadius="500dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#f5f4f0" />
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />
            <corners android:topLeftRadius="15dp" android:bottomLeftRadius="500dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ffbb80" />
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />
            <corners android:topLeftRadius="500dp" android:bottomLeftRadius="500dp" />
        </shape>
    </item>
</selector>