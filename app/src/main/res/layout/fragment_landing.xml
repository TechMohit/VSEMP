<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayoutStyle"
    android:orientation="vertical"
    tools:context="com.example.varadhi.addstaff.EmployeeAdd.LandingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layoutAddEmployee"
            style="@style/LinearLayoutStyle"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/dimen40dp"
                android:layout_height="@dimen/dimen40dp"
                android:background="@drawable/ic_user"
                android:layout_marginTop="@dimen/mar_padd_10dp"
                android:layout_marginStart="@dimen/mar_padd_10dp"
                android:contentDescription="@string/clickbutton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Staff"
                android:padding="@dimen/mar_padd_5dp"
                android:layout_marginStart="@dimen/mar_padd_5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAddAttendance"
            style="@style/LinearLayoutStyle"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/dimen40dp"
                android:layout_height="@dimen/dimen40dp"
                android:background="@drawable/ic_icon"
                android:layout_marginTop="@dimen/mar_padd_10dp"
                android:layout_marginStart="@dimen/mar_padd_10dp"
                android:contentDescription="@string/clickbutton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:padding="@dimen/mar_padd_5dp"
                android:layout_marginStart="@dimen/mar_padd_5dp"/>

        </LinearLayout>

    </LinearLayout>








</LinearLayout>
