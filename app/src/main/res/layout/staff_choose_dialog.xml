<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/mar_padd_5dp"
        app:cardElevation="@dimen/mar_padd_5dp"
        android:layout_margin="@dimen/mar_padd_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Select Staff"
                android:textSize="@dimen/text20sp"
                android:padding="@dimen/mar_padd_5dp"
                android:visibility="gone"
                android:background="@color/colorOrange"
                android:textColor="@color/whitecolor"/>

            <ImageView
                android:id="@+id/ivStaffImage"
                android:layout_width="@dimen/dimen50dp"
                android:layout_height="@dimen/dimen50dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/mar_padd_10dp"
                android:background="@drawable/ic_staff_people_group_in_a_circular_arrow"/>


            <Button
                android:id="@+id/btnStaffTeaching"
                android:layout_marginTop="@dimen/mar_padd_10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/shape_border"
                android:layout_marginStart="@dimen/marandpad20"
                android:layout_marginEnd="@dimen/marandpad20"
                android:text="Teaching"/>

            <Button
                android:id="@+id/btnStaffNonTeaching"
                android:layout_marginTop="@dimen/mar_padd_10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/shape_border"
                android:layout_marginStart="@dimen/marandpad20"
                android:layout_marginEnd="@dimen/marandpad20"
                android:text="Non Teaching"/>

            <Button
                android:id="@+id/btnStaffTransport"
                android:layout_marginTop="@dimen/mar_padd_10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/shape_border"
                android:layout_marginStart="@dimen/marandpad20"
                android:layout_marginEnd="@dimen/marandpad20"
                android:text="Transportation"/>



            <Button
                android:id="@+id/btnStaffOk"
                android:layout_marginTop="@dimen/mar_padd_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marandpad20"
                android:layout_marginEnd="@dimen/marandpad20"
                android:text="OK"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                />


        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>