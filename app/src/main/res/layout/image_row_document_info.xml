<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginStart="@dimen/mar_padd_5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewAadharIdNumber"
        android:layout_width="@dimen/dimen50dp"
        android:layout_height="@dimen/dimen70dp"
        android:layout_margin="@dimen/mar_padd_10dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/clickedImage"
            android:layout_width="@dimen/dimen70dp"
            android:layout_height="match_parent"
            android:background="@color/whitecolor"
            android:visibility="visible"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />

    </android.support.v7.widget.CardView>

    </LinearLayout>




    <FrameLayout
        android:id="@+id/frameLayoutForPdfName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/textViewForPdfName"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_gallery_a">
        </TextView>

        <ImageView
            android:id="@+id/imageView_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:clickable="true"
            android:src="@drawable/ic_delete_forever_black_24dp" />

    </FrameLayout>




</LinearLayout>